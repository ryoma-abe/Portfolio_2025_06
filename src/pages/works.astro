---
import Layout from '../layouts/Layout.astro';
import worksData from '../data/works.json';
---

<Layout title="Works">
  <section class="py-32 relative">
    <!-- Top decorative line -->
    <div class="absolute top-0 left-0 right-0 h-px bg-gray-200 dark:bg-gray-700"></div>
    
    <div class="max-w-[1400px] mx-auto px-6 md:px-12 lg:px-24">
      <div class="flex items-center gap-8 mb-16">
        <h1 class="text-xs font-semibold tracking-[0.3em] text-code font-mono">
          // PROJECTS
        </h1>
        <div class="h-px bg-gray-200 dark:bg-gray-700 flex-1"></div>
      </div>
      
      <div class="grid sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 md:gap-x-12 md:gap-y-16">
        {worksData.map((work, index) => (
          <article class="group">
            <div class="aspect-[4/3] border border-gray-200 dark:border-gray-600 relative overflow-hidden mb-6 bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-700">
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-7xl font-mono font-light text-gray-200 dark:text-gray-600 group-hover:text-accent transition-all duration-500 group-hover:scale-110">
                  [{String(index + 1).padStart(2, '0')}]
                </span>
              </div>
              <!-- Corner decoration -->
              <div class="absolute top-4 left-4 w-8 h-8 border-l border-t border-gray-300 dark:border-gray-500"></div>
              <div class="absolute bottom-4 right-4 w-8 h-8 border-r border-b border-gray-300 dark:border-gray-500"></div>
            </div>
            
            <div>
              <h3 class="text-lg font-medium text-primary dark:text-dark-primary mb-3">
                {work.title}
              </h3>
              <p class="text-sm font-normal text-secondary dark:text-dark-secondary leading-relaxed mb-6">
                {work.description}
              </p>
              
              <div class="h-px bg-gray-200 dark:bg-gray-700 mb-6"></div>
              
              <div class="flex flex-wrap gap-2 mb-6">
                {work.technologies.map((tech) => (
                  <span class="text-xs font-mono text-accent border border-gray-200 dark:border-gray-600 px-3 py-1 hover:border-accent transition-colors duration-300">
                    {tech}
                  </span>
                ))}
              </div>
              
              <a
                href={work.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-xs font-medium tracking-[0.2em] text-primary dark:text-dark-primary border border-primary dark:border-dark-primary px-4 py-2 hover:bg-primary hover:text-white dark:hover:bg-dark-primary dark:hover:text-dark-bg transition-all duration-300 group"
              >
                <span class="font-mono mr-2">{'<'}</span>
                VIEW PROJECT
                <span class="font-mono ml-2">{'>'}</span>
                <svg class="w-3 h-3 ml-2 opacity-0 -translate-x-1 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>