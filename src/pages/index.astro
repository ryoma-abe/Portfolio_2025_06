---
import Layout from '../layouts/Layout.astro';
import siteInfo from '../data/siteInfo.json';

const { contact } = siteInfo;

const services = [
  {
    title: 'Web Design',
    description: 'モダンで美しいWebサイトを制作',
    number: '01',
  },
  {
    title: 'Development',
    description: '高速で安定した開発環境を構築',
    number: '02',
  },
  {
    title: 'Consulting',
    description: 'ビジネスに最適な解決策をご提案',
    number: '03',
  },
];
---

<Layout title="Home">
  <section class="min-h-[calc(100vh-65px)] md:min-h-[calc(100vh-73px)] relative flex items-center border-b border-gray-200 dark:border-gray-700">
    <!-- Decorative vertical line -->
    <div class="absolute left-12 top-0 bottom-0 w-px bg-gray-100 dark:bg-gray-700 hidden lg:block"></div>
    <div class="absolute right-12 top-0 bottom-0 w-px bg-gray-100 dark:bg-gray-700 hidden lg:block"></div>
    
    <div class="max-w-[1400px] mx-auto px-4 sm:px-6 md:px-12 lg:px-24 w-full">
      <div class="max-w-4xl">
        <p class="text-xs font-semibold tracking-[0.3em] text-code dark:text-dark-code mb-6 md:mb-8 font-mono">// PORTFOLIO</p>
        <h1 class="text-3xl xs:text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-light tracking-tight text-primary dark:text-dark-primary mb-4 md:mb-6 lg:mb-8 leading-tight md:leading-[0.9]">
          Ryoma<span class="text-accent dark:text-dark-accent">Abe</span>
        </h1>
        <p class="text-base sm:text-lg md:text-xl font-normal text-secondary dark:text-dark-secondary mb-12 md:mb-16 tracking-wide">
          フロントエンドエンジニア
        </p>
        
        <!-- Horizontal line -->
        <div class="h-px bg-gray-200 dark:bg-gray-700 w-32 mb-8"></div>
        
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
          <a
            href="/works"
            class="inline-flex items-center justify-center text-sm font-medium tracking-wider text-primary dark:text-dark-primary border border-primary dark:border-dark-primary px-6 py-4 hover:bg-primary hover:text-white dark:hover:bg-dark-primary dark:hover:text-dark-bg transition-all duration-300 group min-h-[48px]"
          >
            <span class="font-mono mr-2">{'<'}</span>
            VIEW WORKS
            <span class="font-mono ml-2">{'>'}</span>
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center text-sm font-medium tracking-wider text-secondary dark:text-dark-secondary border border-gray-300 dark:border-gray-600 px-6 py-4 hover:border-secondary hover:text-primary dark:hover:border-dark-secondary dark:hover:text-dark-primary transition-all duration-300 min-h-[48px]"
          >
            CONTACT US
          </a>
        </div>
      </div>
      
      <!-- Bottom right text -->
      <div class="absolute bottom-4 right-4 sm:bottom-6 sm:right-6 md:bottom-12 md:right-12 text-right">
        <p class="text-xs font-mono text-code dark:text-dark-code hidden sm:block">/* Frontend Developer */</p>
        <p class="text-xs font-medium text-secondary dark:text-dark-secondary tracking-wider">{contact.location}</p>
      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 lg:py-32 bg-white dark:bg-dark-bg border-b border-gray-200 dark:border-gray-700 relative">
    <!-- Decorative elements -->
    <div class="absolute left-0 top-32 w-24 h-px bg-gray-200 dark:bg-gray-700"></div>
    <div class="absolute right-0 top-32 w-24 h-px bg-gray-200 dark:bg-gray-700"></div>
    
    <div class="max-w-[1400px] mx-auto px-6 md:px-12 lg:px-24">
      <h2 class="text-xs font-semibold tracking-[0.3em] text-code dark:text-dark-code mb-16 font-mono">
        // SERVICES
      </h2>
      <div class="grid md:grid-cols-3 gap-12 lg:gap-16">
        {services.map((service, index) => (
          <div class="group relative">
            {index < 2 && (
              <div class="absolute right-0 top-0 bottom-0 w-px bg-gray-100 dark:bg-gray-700 hidden md:block"></div>
            )}
            <span class="text-5xl font-mono font-light text-gray-300 dark:text-gray-600 group-hover:text-accent dark:group-hover:text-dark-accent transition-colors duration-500">
              [{service.number}]
            </span>
            <h3 class="text-xl font-medium text-primary dark:text-dark-primary mt-8 mb-4">
              {service.title}
            </h3>
            <p class="text-sm font-normal text-secondary dark:text-dark-secondary leading-relaxed">
              {service.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>