---
import siteInfo from '../siteInfo.json';

const currentYear = new Date().getFullYear();
const { contact, social, company } = siteInfo;
const baseUrl = import.meta.env.BASE_URL;
---

<footer class="bg-white dark:bg-dark-bg border-t border-gray-200 dark:border-gray-700">
  <div class="max-w-[1400px] mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 border-b border-gray-200 dark:border-gray-700">
      <!-- Left Section -->
      <div class="px-4 sm:px-6 md:px-12 lg:px-24 py-8 md:py-12 lg:py-16 md:border-r border-gray-200 dark:border-gray-700">
        <h3 class="text-lg sm:text-xl md:text-2xl font-light tracking-wider text-primary dark:text-dark-primary mb-3 md:mb-4">{company.name}</h3>
        <p class="text-sm font-light text-secondary dark:text-dark-secondary leading-relaxed">
          {company.tagline}
        </p>
      </div>
      
      <!-- Middle Section -->
      <div class="px-4 sm:px-6 md:px-12 py-8 md:py-12 lg:py-16 border-t md:border-t-0 md:border-r border-gray-200 dark:border-gray-700">
        <div class="mb-4 md:mb-6">
          <p class="text-xs font-light tracking-[0.2em] text-secondary dark:text-dark-secondary mb-2">EMAIL</p>
          <a href={`mailto:${contact.email}`} class="text-sm font-light text-primary dark:text-dark-primary hover:text-accent dark:hover:text-dark-accent transition-colors duration-300 break-all">{contact.email}</a>
        </div>
        <div>
          <p class="text-xs font-light tracking-[0.2em] text-secondary dark:text-dark-secondary mb-2">LOCATION</p>
          <p class="text-sm font-light text-primary dark:text-dark-primary">{contact.location}</p>
        </div>
      </div>
      
      <!-- Right Section -->
      <div class="px-4 sm:px-6 md:px-12 py-8 md:py-12 lg:py-16 border-t md:border-t-0 border-gray-200 dark:border-gray-700">
        <p class="text-xs font-light tracking-[0.2em] text-secondary dark:text-dark-secondary mb-4">SOCIAL</p>
        <div class="flex flex-col gap-3">
          {social.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm font-light text-primary dark:text-dark-primary hover:text-secondary dark:hover:text-dark-secondary transition-colors duration-300 inline-flex items-center group"
              aria-label={link.name}
            >
              {link.name}
              <svg class="w-3 h-3 ml-2 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </a>
          ))}
          <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
            <a
              href={`${baseUrl}site-info/`}
              class="text-sm font-light text-primary dark:text-dark-primary hover:text-secondary dark:hover:text-dark-secondary transition-colors duration-300 inline-flex items-center"
            >
              About This Site
              <span class="text-code dark:text-dark-code ml-2 text-accent dark:text-dark-accent">&gt;</span>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Copyright -->
    <div class="px-4 sm:px-6 md:px-12 lg:px-24 py-4 md:py-6 flex flex-col md:flex-row justify-between items-start md:items-center gap-3 md:gap-4">
      <div>
        <p class="text-xs font-light text-secondary dark:text-dark-secondary">{company.copyright.replace('2024', currentYear.toString())}</p>
        <p class="text-xs font-light text-secondary dark:text-dark-secondary mt-1">Crafted with Code & Coffee.</p>
      </div>
      <div class="h-px bg-gray-200 dark:bg-gray-700 w-12 hidden md:block"></div>
    </div>
  </div>
</footer>