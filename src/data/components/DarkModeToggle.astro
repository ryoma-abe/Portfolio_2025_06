---
// Dark mode toggle component
---

<button 
  id="dark-mode-toggle" 
  class="p-2 rounded-lg border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors duration-300"
  aria-label="Toggle dark mode"
>
  <!-- Sun icon for light mode -->
  <svg id="sun-icon" class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
  </svg>
  
  <!-- Moon icon for dark mode -->
  <svg id="moon-icon" class="w-5 h-5 text-gray-600 dark:text-gray-300 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
  </svg>
</button>

<script>
  // This script handles initial icon state only
  document.addEventListener('astro:page-load', () => {
    const currentTheme = localStorage.getItem('theme') || 'light';
    const sunIcons = document.querySelectorAll('#sun-icon');
    const moonIcons = document.querySelectorAll('#moon-icon');
    
    if (currentTheme === 'dark') {
      sunIcons.forEach(icon => icon?.classList.add('hidden'));
      moonIcons.forEach(icon => icon?.classList.remove('hidden'));
    } else {
      sunIcons.forEach(icon => icon?.classList.remove('hidden'));
      moonIcons.forEach(icon => icon?.classList.add('hidden'));
    }
  });
</script>